{
    "postCreateCommand": "sh bootstrap.sh",
    "customizations": {
		"vscode": {
			"settings": {
                "files.exclude": {
                    "**/*.aux": true,
                    "**/*.bcf": true,        
                    "**/*.bbl": true,
                    "**/*.blg": true,
                    "**/*.log": true,
                    "**/*.out": true,
                    "**/*.run.xml": true,
                    "**/*.synctex.gz": true,
                    "**/*.fdb_latexmk": true,
                    "**/*.fls": true,
                    "**/*.toc": true,
                    "**/*.lof": true,
                    "**/*.lot": true,
                    "**/*.bib.sav": true,
                },
                "latex-workshop.showContextMenu": true,
                "latex-workshop.latex.autoBuild.run": "onSave",
                "latex-workshop.message.error.show": false,
                "latex-workshop.message.warning.show": false,
                "latex-workshop.intellisense.package.enabled": true,
                "latex-workshop.latex.tools": [
                    {
                        "name": "xelatex",
                        "command": "/usr/local/texlive/2023/bin/x86_64-linux/xelatex",
                        "args": [
                            "-shell-escape",
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "%DOC%"
                        ]
                    },
                    {
                        "name": "biber",
                        "command": "/usr/local/texlive/2023/bin/x86_64-linux/biber",
                        "args": [
                            "%DOCFILE%"
                        ]
                    }
                ],
                "latex-workshop.latex.recipes": [
                    {
                        "name": "xelatex",
                        "tools": [
                            "xelatex"
                        ]
                    },
                    {
                        "name": "xelatex -> biber -> xelatex*2",
                        "tools": [
                            "xelatex",
                            "biber",
                            "xelatex",
                            "xelatex"
                        ]
                    }
                ],
                "latex-workshop.latex.clean.fileTypes": [
                    "*.aux",
                    "*.bbl",
                    "*.blg",
                    "*.brf",
                    "*.bcf",
                    "*.run.xml",
                    "*.idx",
                    "*.ind",
                    "*.lof",
                    "*.lot",
                    "*.out",
                    "*.toc",
                    "*.acn",
                    "*.acr",
                    "*.alg",
                    "*.glg",
                    "*.glo",
                    "*.gls",
                    "*.ist",
                    "*.fls",
                    "*.log",
                    "*.fdb_latexmk"
                ],
                "latex-workshop.latex.autoClean.run": "onFailed",
                "latex-workshop.view.pdf.trim": 1,
                "latex-workshop.view.pdf.invert": 0.88,
                "latex-workshop.view.pdf.invertMode.brightness": 1.5,
                "files.autoSave": "afterDelay"
            }
        }
    }
}